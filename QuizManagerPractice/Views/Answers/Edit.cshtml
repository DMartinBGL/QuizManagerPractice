@model QuizManagerPractice.Models.Answer

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Answer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AnswerID" />
            <div class="form-group">
                <label asp-for="AnswerName" class="control-label"></label>
                <input asp-for="AnswerName" class="form-control" />
                <span asp-validation-for="AnswerName" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Correct" /> @Html.DisplayNameFor(model => model.Correct)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="QuestionID" class="control-label"></label>
                <select asp-for="QuestionID" class="form-control" asp-items="ViewBag.QuestionID"></select>
                <span asp-validation-for="QuestionID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
